<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_third_first_font"
            android:textSize="32sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="26dp"
            android:textColor="#1F1F22"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:gravity="center_vertical"
            android:paddingRight="55dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/first_third_second_font"
                android:textSize="28sp"
                android:paddingLeft="27dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/first_third_first_PullDown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/sixth_radiobutton"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_third_first_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:paddingRight="55dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/first_third_twenty_tenth_three_font"
                android:textSize="28sp"
                android:paddingLeft="27dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/first_third_second_PullDown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/sixth_radiobutton"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_third_second_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:paddingRight="55dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/first_third_twenty_tenth_fifth_font"
                android:textSize="28sp"
                android:paddingLeft="27dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/first_third_third_PullDown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/sixth_radiobutton"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_third_third_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:gravity="center_vertical"
            android:paddingRight="55dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/first_third_thirty_one_font"
                android:textSize="28sp"
                android:paddingLeft="27dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/first_third_fourth_PullDown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/sixth_radiobutton"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_third_fourth_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

</ScrollView>
