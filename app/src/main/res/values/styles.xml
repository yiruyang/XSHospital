<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:screenOrientation">landscape</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyTabLayoutTextAppearance"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="first_third_secure_item_font">
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:textColor">#ff6732</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="first_third_secure_item1_font">
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="first_third_secure_item2_font">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:textColor">#1f1f22</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="first_third_secure_item3_font">
        <item name="android:layout_marginLeft">27dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="first_third_secure_item4_font">
        <item name="android:layout_marginLeft">27dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
